{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "exclude": [
    "__tests__/**/*",
    "dist/**/*"
  ]
}